{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Product",
  "type": "object",
  "properties": {
    "IDP": { "type": "integer" },
    "name": { "type": "string" },
    "brand": { "type": "string" },
    "price": {
      "type": "object",
      "properties": {
        "amount": { "type": "number" },
        "currency": { "type": "string" },
        "VAT_rate": { "type": "number" }
      },
      "required": ["amount", "currency", "VAT_rate"]
    },
    "description": { "type": "string" },
    "image_url": { "type": "string" },
    "categories": {
      "type": "array",
      "items": { "type": "object", "properties": { "title": { "type": "string" } }, "required": ["title"] }
    },
    "supplier": {
      "type": "object",
      "properties": {
        "IDS": { "type": "integer" },
        "name": { "type": "string" },
        "SIRET": { "type": "string" },
        "headOffice": { "type": "string" },
        "revenue": { "type": "number" }
      },
      "required": ["IDS", "name", "SIRET", "headOffice", "revenue"]
    }
  },
  "required": ["IDP", "name", "brand", "price", "categories", "supplier"]
}
